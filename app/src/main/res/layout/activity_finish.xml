<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_text_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@color/homecolor"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="完善账户"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            ></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/chinese"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/username_finish"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:hint="用户名 (3-15位英文、数字、中文)"
            android:textSize="15dp"
            android:textColor="@color/login"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_background"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:id="@+id/password_finish"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:hint="密码 (6-15位英文、数字、下划线)"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:textColor="@color/login"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_background">
        </EditText>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/login_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:text="注册"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/homecolor"></androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:gravity="right"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="250dp"
        ></TextView>
</LinearLayout>