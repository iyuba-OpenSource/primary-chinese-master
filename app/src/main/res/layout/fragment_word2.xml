<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_and_Fragment.Word.WordFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/homecolor"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/which_book"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:src="@mipmap/book_menu_word"></ImageView>
        <TextView
            android:id="@+id/name_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一年级上册"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"></TextView>
        <ImageView
            android:id="@+id/pencil"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            ></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/yinhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/person"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/hanzibishun"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="音字练习"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hanyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/person"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@mipmap/touting"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="字音练习"></TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tingli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/person"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@mipmap/pinyin_icon"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="听音练习"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pingxie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/person"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@mipmap/pingxie"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="拼写训练"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/word_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无生词"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycle_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>