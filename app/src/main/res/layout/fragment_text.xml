<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_and_Fragment.OriDetail.TextFragment">


    <LinearLayout
        android:id="@+id/pome_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        tools:ignore="InvalidId">
        <TextView
            android:id="@+id/pome_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""></TextView>
        <TextView
            android:id="@+id/pome_auther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Chinese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:paddingTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/lefttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="00:00"
            android:textSize="20dp"></TextView>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_above="@id/play"
            android:layout_weight="1"
            android:max="100"
            android:progress="0" ></SeekBar>

        <TextView
            android:id="@+id/righttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="00:00"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/continue1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:src="@mipmap/next_music_continue"></ImageView>

        <ImageView
            android:id="@+id/slow"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@mipmap/slow"
            android:text="slow"></ImageView>

        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:background="@mipmap/begin"
            android:text="play"></ImageView>

        <ImageView
            android:id="@+id/fast"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:src="@mipmap/fast"
            android:text="fast"></ImageView>

        <TextView
            android:id="@+id/change_of_speed"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:src="@mipmap/change_of_speed"
            android:text="1.0x"
            android:textSize="20dp"></TextView>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        >
    </LinearLayout>

</LinearLayout>